{% extends 'PaLogicAppBundle::layout.html.twig' %}

{% block title %} - DJCrowd{% endblock %}

{% block description %}Engagiere deinen DJ!{% endblock %}

{% block blog_title %}
    <a href="{{ path('djcrowd_app_homepage') }}">
        <span style="font-size: 25px; font-weight: bold;"><span style="color:#5daed5">DJ</span><span style="color:#e0e0e0">Crowd.ch</span></span>
    </a>
{% endblock %}
{% block sidekicks %}
    <ul>
        <li>
            <a href="{{ path('boxenmieten_app_homepage') }}">
                <span style="font-size: 25px; font-weight: bold;"><span style="color:#00ec11">Boxen</span><span style="color:#e0e0e0">mieten.ch</span></span>
            </a>
        </li>
    </ul>
{% endblock %}

{% block navigation %}
    {{ knp_menu_render('dcMain', {'depth': 2, 'currentAsLink': true, 'currentClass' : 'active'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        filter='cssrewrite'
        output='generated/style/djcrowdStylesheets.css'
        '@PaLogicAppBundle/Resources/public/css/color/blue.css'
        %}
        <link rel="stylesheet" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
