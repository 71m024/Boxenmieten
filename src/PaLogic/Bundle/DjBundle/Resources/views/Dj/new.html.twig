{% extends 'PaLogicDjBundle::layout.html.twig' %}

{% block body -%}
    <h1>Dj erstellen</h1>
    
    {{ form_start(form) }}
        {% if form.vars.errors|length %}
            <div class="warning-box">
            {{ form_errors(form) }}
            </div>
        {% endif %}
        <div class="one-half">
            {{ form_row(form.name) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.email) }}
            {{ form_row(form.genres) }}
            {{ form_row(form.headshot, {'attr' : {'class' : 'image-picker'}}) }}
        </div>
        <div class="one-half last">
            {{ form_row(form.description) }}
            {{ form_row(form.images, {'attr' : {'class' : 'image-picker'}}) }}
        </div>
        <div class="clear"></div>
        <hr />
        <div>
            <div class="alignleft">
                <a class="button" href="{{ path('fos_user_profile_show') }}">
                    Zur√ºck
                </a>
            </div>
            <div class="alignleft">
                {{ form_widget(form.submit, {'attr' : {'class' : 'btn-submit green'}}) }}
            </div>
            <div class="clear"></div>
        </div>
    {{ form_end(form) }}
{% endblock %}
