<div class="page-navi">
    <ul>
        {% if paginator.currentpage != 1 %}
        <li> <a class="previous" href="{{ path(pageRoute, {  'currentPage': paginator.currentpage - 1 }|merge(parameters)) }}">Previous</a>
        {% endif %}
        {% for i in 1..paginator.numpages%}
        {% if paginator.range.0 > 2 and i == paginator.range.0 %}
         ...
        {% endif %}

        {%  if(i==1 or i==paginator.numpages or i in paginator.range) %}
            {% if i==paginator.currentpage %}
            <li><a class="current" href="{{ path(pageRoute, {  'currentPage': i }|merge(parameters))}}">{{i}}</a></li>
            {% else %}
            <li><a href="{{ path(pageRoute, {  'currentPage': i }|merge(parameters)) }}"> {{i}}</a></li>
            {% endif %}
        {% endif %}

        {% if paginator.range[paginator.midrange - 1] < paginator.numpages - 1 and i == paginator.range[paginator.midrange - 1] %}
        ...
        {% endif %}
        {% endfor %}
        {% if paginator.currentpage < paginator.numpages %}
            <li> <a class="next" href="{{ path(pageRoute, {  'currentPage': paginator.currentpage + 1 }|merge(parameters)) }}">Next</a>
        {% endif %}
    </ul>
</div>