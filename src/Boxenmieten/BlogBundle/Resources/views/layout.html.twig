{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite'
        '@BoxenmietenBlogBundle/Resources/public/css/tx3-tag-cloud.css'
        '@BoxenmietenBlogBundle/Resources/public/css/stylesheet.css'
        output='generated/style/blogStylesheet.css'
    %}
        <link rel="stylesheet" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block sidebar %}
      {% render(controller("BoxenmietenBlogBundle:Blog:sidebar")) %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@BoxenmietenBlogBundle/Resources/public/js/tx3-tag-cloud.js'
        '@BoxenmietenBlogBundle/Resources/public/js/scripts.js'
        output='generated/scripts/blogScript.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascripts %}