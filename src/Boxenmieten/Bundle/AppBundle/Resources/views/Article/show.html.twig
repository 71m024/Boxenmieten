{% extends 'BoxenmietenAppBundle::layout.html.twig' %}

{% block  description %}{{ article.make }}, {{ article.model }}{{parent()}}{% endblock %}

{% block title %}{{ article.model }}{% endblock%}

{% block body %}
<div class="portfolio-content">
    <div class="portfolio-bannercontainer">
        <div class="portfolio-banner">
            <ul>
                {% for image in article.images %}
                <li data-transition="slidehorizontal"><img src="{{ image.webPath | imagine_filter('filter_show') }}" alt="{{ image.title }}" /></li>
                {% endfor %}
            </ul>
            <div class="tp-bannertimer tp-bottom"></div>
        </div>
    </div>
    <section class="content">
        <h2>{{ article.make }}, {{ article.model }}</h2>
        <!--<h3>{{ article.weekPrice }} CHF/Woche</h3>-->
        {{ article.description|raw }}
    </section>
    <div class="item-details">
        <ul class="item-info">
            {% block details %}
            <li><span class="lite1">Hersteller </span>{{ article.manufacturer }}</li>
            <li><span class="lite1">Neupreis </span>{{ article.price }} CHF</li>
            {% endblock %}
        </ul>
        <a target="_blank" href="{{ article.website }}">Herstellerseite</a>
        <div class="clear"></div>
    </div>
</div>
{% endblock body %}